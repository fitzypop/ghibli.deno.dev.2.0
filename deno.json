{
  "lock": false,
  "tasks": {
    "check": "deno lint && deno fmt && deno check dev.ts",
    "start": "deno run -A --watch=static/,routes/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "files": { "exclude": ["*.md", "*.toml", "*.sql", ".gitignore", "*.json"] }
  }
}
